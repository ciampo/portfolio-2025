---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';

const allProjects = await getCollection("projects");
---

<Layout>
	<h2>Projects</h2>
	<ul>
		{allProjects.map(project => (
			<li>
				<a href={`/projects/${project.id}`}>{project.data.title}</a>
			</li>
		))}
	</ul>
</Layout>
