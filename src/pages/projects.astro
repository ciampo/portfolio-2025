---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';

const allProjects = await getCollection("projects");
---

<Layout
	headTitle='Projects - Marco Ciampini, UI Engineer'
	headDescription='Welcome to the personal portfolio website of Marco Ciampini, a UI Engineer specializing in web development, accessibility, and performance.'
>
	<h2>Projects</h2>
	<ul>
		{allProjects.map(project => (
			<li>
				<a href={`/projects/${project.id}`}>{project.data.title}</a>
			</li>
		))}
	</ul>
</Layout>
